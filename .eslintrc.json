{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["react-app", "prettier"],
  "rules": {
    "jsx-quotes": [1, "prefer-double"],
    "no-console": "warn",
    "prefer-const": "error",
    "max-len": ["error", { "code": 120 }],
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "newlines-between": "always"
      }
    ],
    "react/react-in-jsx-scope": "off"
  },
  "plugins": ["prettier"]
}
